---

const { ref, range, showAmount = false, isPlural = false } = Astro.props;
const isOne = typeof range === "number";
const list = ref.slice(isOne ? range : range[0], isOne ? range + 1 : range[1]);
---

<>
    {list.map((ing) =>
        <strong>
            {ing.name}
            {isPlural && <>s</>}
            {showAmount && <> ({ing.amount.join(" ")})</>}
            {(!isOne && list.length > 1) && <>, </>}
        </strong>)}
    {!isOne && <> and <strong>{ref[range[1]].name}{showAmount && <> ({ref[range[1]].amount.join(" ")})</>}</strong></>}
</>
